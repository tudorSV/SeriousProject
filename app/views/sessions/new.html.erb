<h2 align="center">Sign in</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag sessions_path do |form| %>

        <%= label_tag :username %>
        <%= text_field_tag :username %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <div class="more">
          <div id="container">
            <div style="width:400px;"><%= submit_tag "Login", class: "btn btn-primary" %></div>
            <% end %>
            <div style="width:100px;"><%= link_to "Back", root_path, class: "btn btn-primary"  %></div>
          </div>
        </div>
    </div>
</div>
