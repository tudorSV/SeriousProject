<h2 align="center">Sign in</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag sessions_path do |form| %>

      <%= label_tag :username %>
      <%= text_field_tag :username %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <div>
        <%= link_to "Sign up", new_user_path %>
      </div>
      <div>
        <%= link_to "Recover password", recoverPassword_path %>
      </div>
      <div class="more">
        <div class="button save"><%= submit_tag "Login", class: "btn btn-primary" %></div>
        <div class="button back"><%= link_to "Back", root_path, class: "btn btn-primary" %></div>
      </div>
    <% end %>
  </div>
</div>
