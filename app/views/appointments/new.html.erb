<h1>Create a bew appointment</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@user, @appointment],
            url:user_appointments_path(@user),
            method: :post  do |appointment_form | %>
      <%= render 'shared/error_messages', object: appointment_form.object %>
      <%= appointment_form.label :date %>
      <%= appointment_form.text_field :date %>

      <%= appointment_form.label :item_number %>
      <%= appointment_form.text_field :item_number %>

      <%= appointment_form.label :status %>
      <%= appointment_form.text_field :status %>

      <%= appointment_form.label :user_id %>
      <%= appointment_form.collection_select(:user_id, User.all, :id, :name )%>

      <%= appointment_form.label :shop_id %>
      <%= appointment_form.collection_select(:shop_id, Shop.all, :id, :name )%>

      <div class="more">
        <div class="button save"><%= employee_form.submit "Add employee", class: "btn btn-primary" %></div>
        <div class="button back"><%= link_to "Back", company_shop_path(@company,@shop), class: "btn btn-primary"  %></div>
      </div>
    <% end %>
  </div>
</div>
