<h1>Edit the appointment</h1>
<div class="form">
  <%= form_for [@user, @appointment] do |appointment_form| %>
    <%= render 'shared/error_messages', object: appointment_form.object %>
    <%= appointment_form.label :date, 'Change the appointment date:' %>
    <%= appointment_form.date_field :date %>

    <%= appointment_form.label :item_number, 'Change the number of items:' %>
    <%= appointment_form.text_field :item_number %>

    <div class="more">
      <div class="button save"><%= appointment_form.submit "Edit the appointment", class: "btn btn-primary" %></div>
      <div class="button back"><%= link_to "Back", user_path(@user), class: "btn btn-primary" %></div>
    </div>
  <% end %>
</div>
