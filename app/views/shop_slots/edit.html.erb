<h1>Change the shop slot</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@company, @shop, @shop_slot] do |shop_slot_form| %>
      <%= render 'shared/error_messages', object: shop_slot_form.object %>
      <%= shop_slot_form.label @shop_slot.week_day.humanize %>

      <%= shop_slot_form.label :max_appointments %>
      <%= shop_slot_form.text_field :max_appointments %>

      <%= shop_slot_form.label 'Opening hour' %>
      <%= shop_slot_form.time_select :open_hour, ampm: true, default: { hour: 8, minute: 0 }, discard_minute: true %>

      <%= shop_slot_form.label 'Closing hour' %>
      <%= shop_slot_form.time_select :close_hour, ampm: true, default: { hour: 18, minute: 0 }, discard_minute: true %>

      <div class="more">
        <div class="button save"><%= shop_slot_form.submit "Change shop slot", class: "btn btn-primary" %></div>
        <div class="button back"><%= link_to "Back", company_shop_path(@company,@shop), class: "btn btn-primary"  %></div>
      </div>
    <% end %>
  </div>
</div>
