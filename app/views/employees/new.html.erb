<h1>Input info about the new employee</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@company, @shop, @employee],
            url:company_shop_employees_path(@company, @shop),
            method: :post  do |employee_form | %>
      <%= render 'shared/error_messages', object: employee_form.object %>
      <%= employee_form.label :role %>
      <%= employee_form.text_field :role %>

      <%= employee_form.label :username %>
      <%= employee_form.text_field :username %>

      <div class="more">
        <div id="container">
            <div style="width:400px;"><%= employee_form.submit "Save changes", class: "btn btn-primary" %></div>
          <% end %>
            <div style="width:100px;"><%= link_to "Back", company_path(@company), class: "btn btn-primary"  %></div>
        </div>
      </div>
  </div>
</div>
