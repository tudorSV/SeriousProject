<h1>Change the employees job</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@company, @shop, @employee] do |employee_form|%>
      <%= render 'shared/error_messages', object: employee_form.object %>
      <%= employee_form.label :role %>
      <%= employee_form.text_field :role %>

      <div class="more">
        <div id="container">
            <div style="width:400px;"><%= employee_form.submit "Update employee", class: "btn btn-primary" %></div>
            <div style="width:100px;"><%= link_to "Back", company_shop_employee_path(@company,@shop, @employee), class: "btn btn-primary"  %></div>
        </div>
      </div>
    <% end %>
  </div>

</div>
