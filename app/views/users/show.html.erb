  <h2 class="h2-comp">
    This is your profile!
  </h2>

 <div class="show">
   <ul>
    <li>Name: <%= @user.name %></li>
    <li>Email: <%= @user.email %></li>
    <li>Username: <%= @user.username %></li>
    <li>Is admin? <%= @user.admin %></li>
    <li>Short address: <%= @user.address.short_address %></li>
    <li>Full address: <%= @user.address.full_address %></li>
    <li>City: <%= @user.address.city %></li>
    <li>Zipcode: <%= @user.address.zipcode %></li>
    <li>Country: <%= @user.address.country %></li>

    <div class="showbtn">
      <%= link_to "Edit profile", edit_user_path(@user) , class: "btn btn-primary" %>
      <%= link_to "Delete user", user_path(@user), method: :delete , class: "btn btn-primary" , data: { confirm: "Are you sure you want to delete the user?" } %>
      <%= link_to "Back to users page" , users_path, class: "btn btn-primary" %>
    </div>
  </ul>
</div>
