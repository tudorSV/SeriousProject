<h2 class="h2-comp">
  Exisiting users
</h2>

  <div class="show">
    <ul>
      <% @users.each do |user| %>
        <li>
          <table>
            <tr>
              <th>Username</th>
              <th>Status</th>
              <th>Blocked</th>
            </tr>
            <tr>
              <td><%= user.username %></td><td>
                <%= user.active? ? "Active" : "Inactive"  %>
                <% if !user.active %>
                  <%= link_to "Activate",
                               user_change_status_path(user, user: user.id, status: 'ready'),
                               method: :put,
                               class: "btn btn-primary",
                               data: { confirm: "Are you sure you want to change the status?" } %>

                <% end %>
              </td>
              <td>
                <%= user.blocked? ? "Blocked" : "Not blocked"  %>
                <% if user.blocked == false %>
                  <%= link_to "Block the user",
                               user_block_user_path(user, user: user.id, status: 'ready'),
                               method: :put,
                               class: "btn btn-primary",
                               data: { confirm: "Are you sure you want to block the user?" } %>
                  <% else %>
                  <%= link_to "Lift the ban",
                               user_block_user_path(user, user: user.id, status: 'ready'),
                               method: :put,
                               class: "btn btn-primary",
                               data: { confirm: "Are you sure you want to lift the ban?" } %>

                <% end %>
              </td>
            </tr>
          </tr>
        </table>
        </li>
      <% end %>
  </ul>
</div>
