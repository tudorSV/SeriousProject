<h2 align="center">Edit your profile!</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |user_form| %>
      <%= render 'shared/error_messages', object: user_form.object %>

      <%= user_form.label :name %>
      <%= user_form.text_field :name %>

      <%= user_form.label :username %>
      <%= user_form.text_field :username %>

      <%= user_form.label :password %>
      <%= user_form.password_field :password %>

      <%= user_form.label :password_confirmation %>
      <%= user_form.password_field :password_confirmation %>

      <%= user_form.label :email %>
      <%= user_form.text_field :email %>
      <div id="active">
        <% if @user.admin %>
          <div><%= user_form.label :admin %></div>
          <div><%= user_form.check_box :admin %></div>
        <% end %>
      </div>
       <%= user_form.fields_for :address do |address_form| %>
         <%= address_form.label :short_address %>
         <%= address_form.text_field :short_address %>

         <%= address_form.label :full_address %>
         <%= address_form.text_field :full_address %>

         <%= address_form.label :city %>
         <%= address_form.text_field :city %>

         <%= address_form.label :zipcode %>
         <%= address_form.text_field :zipcode %>

         <%= address_form.label :country %>
         <%= address_form.text_field :country %>
      <% end %>
      <div class="more">
        <div class="button save" ><%= user_form.submit "Save profile", class: "btn btn-primary" %></div>
        <div class="button back"><%= link_to "Back", users_path, class: "btn btn-primary"  %></div>
      </div>
    <% end %>
  </div>
</div>
