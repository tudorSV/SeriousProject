<h1>Create a new company</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@company) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <div class="more">
        <div class="button save"><%= f.submit "Create a new company", class: "btn btn-primary" %></div>
        <div class="button back"><%= link_to "Back", companies_path, class: "btn btn-primary"  %></div>
      </div>
    <% end %>
  </div>
</div>
