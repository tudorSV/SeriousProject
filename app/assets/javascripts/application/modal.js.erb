$(document).ready( function() {
  $( "#dialog" ).dialog({
    autoOpen: false,
    draggable: false,
    height: 300,
    width: 600,
    buttons: {
      "Yay": function() {
        $.ajax({
            type: "DELETE",
            url: "/companies/1/shops/8"
        })
      },
      "Nay": function() {
        $( this ).dialog( "close" );
      }
    }
  });

  $( "#opener" ).on( "click", function() {
    $( "#dialog" ).dialog( "open" );
  });
} );
